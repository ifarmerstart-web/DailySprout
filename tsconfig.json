{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    
    /* ⬇️ 이 부분이 핵심 수정 사항입니다 */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
